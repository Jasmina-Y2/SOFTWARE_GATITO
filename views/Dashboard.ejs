<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel de Conciliador</title>
    <!-- Bootstrap CSS -->
    <%- include('partials/Basicos.ejs') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<style>
    *{
        font-family: "Inter", sans-serif;
        font-optical-sizing: auto;
        font-weight: 300;
        font-style: normal;
    }
    .effect{
        border: 1px solid rgb(93, 113, 150);
        margin-right: 5px;
        opacity: 0.9;

    }
</style>
<body>

<!-- Encabezado -->
<nav class="navbar navbar-dark bg-primary p-3">
    <div class="container-fluid">
        <%if(data.length > 1){%>
            <h5>Hola <%=data_user.email%> !&nbsp;</h5>
            <div class="btn-group" role="group" aria-label="Opciones del Panel">
                <% data.forEach(e =>{ %>
                    <% if(currentRoute == "con" && e=="conciliador"){%>
                        <button type="button" class="effect btn btn-light text-primary fw-bold"   onclick="cambiarOpcion('<%=e%>')">
                            <%= e%>
                        </button>
                    <%}else if(currentRoute == "con" && e=="director"){%>
                        <a href="/dashboard_dir/<%= data_user.dni %>"><button type="button" class="btn btn-light text-primary fw-bold"   onclick="cambiarOpcion('<%=e%>')">
                            <%= e%>
                        </button></a>
                    <%}%>
                <%})%>
            </div>
        <%}else{%>
            <span class="navbar-brand mb-0 h1">Panel de Conciliador</span>
        <%}%>
        <a href="/login" class="btn btn-danger">Cerrar Sesi√≥n</a>
    </div>
</nav>

<!-- Navegaci√≥n -->
<ul class="nav nav-tabs mt-3">
    <li class="nav-item">
        <a class="nav-link active" href="#">M√≥dulo de Solicitud</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Expedientes</a>
    </li>
</ul>

<!-- Contenedor principal -->
<div class="container mt-4">
    <h2 class="text-primary">Generar Solicitud de Conciliaci√≥n</h2>
    
    <!-- Botones -->
