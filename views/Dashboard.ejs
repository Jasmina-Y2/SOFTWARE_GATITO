        <div class="card-header fw-bold bg-light">
            Datos del Solicitante
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="nombre" class="form-label">Nombre y apellidos / Denominaci√≥n o raz√≥n social</label>
                    <input type="text" class="form-control" id="nombre" placeholder="Ingrese nombre">
                </div>
                <div class="col-md-6">
                    <label for="ruc" class="form-label">Documento de identidad o RUC</label>
                    <input type="text" class="form-control" id="ruc" placeholder="Ingrese RUC o DNI">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="domicilio" class="form-label">Domicilio real</label>
                    <input type="text" class="form-control" id="domicilio" placeholder="Ingrese domicilio">
                </div>
                <div class="col-md-6">
                    <label for="email" class="form-label">Correo electr√≥nico</label>
                    <input type="email" class="form-control" id="email" placeholder="Ingrese correo">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="telefono" class="form-label">N√∫mero telef√≥nico</label>
                    <input type="tel" class="form-control" id="telefono" placeholder="Ingrese tel√©fono">
                </div>
            </div>
        </div>
    </div>

    <!-- Datos del Apoderado -->
    <div class="card mb-4">
        <div class="card-header fw-bold bg-light">
            Datos del Apoderado o Representante
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="apoderado" class="form-label">Nombre del apoderado</label>
                    <input type="text" class="form-control" id="apoderado" placeholder="Ingrese nombre">
                </div>
                <div class="col-md-6">
                    <label for="domicilioApoderado" class="form-label">Domicilio real</label>
                    <input type="text" class="form-control" id="domicilioApoderado" placeholder="Ingrese domicilio">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="emailApoderado" class="form-label">Correo electr√≥nico</label>
                    <input type="email" class="form-control" id="emailApoderado" placeholder="Ingrese correo">
                </div>
                <div class="col-md-6">
                    <label for="telefonoApoderado" class="form-label">N√∫mero telef√≥nico</label>
                    <input type="tel" class="form-control" id="telefonoApoderado" placeholder="Ingrese tel√©fono">
                </div>
            </div>
        </div>
    </div>

    <!-- Datos del Invitado -->
    <div class="card mb-4">
        <div class="card-header fw-bold bg-light">
            Datos del Invitado
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="nombreInvitado" class="form-label">Nombre o raz√≥n social</label>
                    <input type="text" class="form-control" id="nombreInvitado" placeholder="Ingrese nombre">
                </div>
                <div class="col-md-6">
                    <label for="domicilioInvitado" class="form-label">Domicilio real</label>
                    <input type="text" class="form-control" id="domicilioInvitado" placeholder="Ingrese domicilio">
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
<script>
    function cambiarOpcion(opcion) {
        console.log(opcion)
    }
</script>
</html>
